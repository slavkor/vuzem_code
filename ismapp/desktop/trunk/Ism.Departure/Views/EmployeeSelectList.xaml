                                </telerik:RadGridView.Columns>
                            </telerik:RadGridView>
                        </telerik:RadTabItem>
                        <telerik:RadTabItem Header="Zgodovina">
                            <telerik:RadGridView ItemsSource="{Binding Occupancies}" ShowGroupPanel="False" IsFilteringAllowed="False" AutoGenerateColumns="False" >
